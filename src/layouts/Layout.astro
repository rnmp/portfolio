---
import '../styles/globals.css';

export interface Props {
  title: string;
  description?: string;
  background?: string;
  animate?: boolean;
}

const { title, description, background = '/background.jpg', animate = true } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.png" />
    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-0HVRQ30KRH"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-0HVRQ30KRH');
    </script>
  </head>
  <body data-background={background} data-animate={animate.toString()}>
    <slot />
    <script>
      // Progressive background image loading
      const shouldAnimate = document.body.dataset.animate === 'true';
      
      if (shouldAnimate) {
        const img = new Image();
        img.onload = function() {
          // Update the background image to the full version
          const style = document.createElement('style');
          style.textContent = `
            body::before {
              background-image: url('${this.src}');
            }
          `;
          document.head.appendChild(style);
          
          // Add class to trigger the transition
          document.body.classList.add('background-loaded');
        };
        
        // Start loading the full image
        img.src = document.body.dataset.background;
      } else {
        // No animation - immediately set background
        const style = document.createElement('style');
        style.textContent = `
          body::before {
            background-image: url('${document.body.dataset.background}');
            filter: blur(0px);
            animation: none;
          }
        `;
        document.head.appendChild(style);
        document.body.classList.add('background-loaded');
      }
    </script>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
  
  @font-face {
    font-family: 'Jugendreisen';
    src: url('/fonts/Jugendreisen-Small.woff2') format('woff2'),
         url('/fonts/Jugendreisen-Small.woff') format('woff');
    font-weight: normal;
    font-style: normal;
  }

  body {
    font-family: 'Rubik', sans-serif;
    min-height: 100dvh;
    position: relative;
  }

  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('data:image/png;base64,');
    background-size: cover;
    background-position: center left;
    background-repeat: no-repeat;
    filter: blur(20px);
    z-index: -1;
    transition: filter 0.5s ease-out;
    transform: scale(1.1);
    animation: zoomOut 7s cubic-bezier(0.19, 1, 0.22, 1) forwards;
  }

  @keyframes zoomOut {
    from {
      transform: scale(1.1);
    }
    to {
      transform: scale(1);
    }
  }
  
  body.background-loaded::before {
    filter: blur(0px);
  }
</style>
