---
import Layout from '../layouts/Layout.astro';
import HomePage from '../components/HomePage';
import SocialIcon from '../components/SocialIcon.astro';
import Card from '../components/Card.astro';
import CardOneliner from '../components/CardOneliner.astro';

const Content = {
  tagline: `
Whimsical software,  
among other things
  `,
  seoDescription:
    "Peruvian-American engineer & designer based in Philadelphia, PA.",
};
---

<Layout title="Rolando" description="Peruvian-American engineer & designer based in Philadelphia, PA.">
    <main>
        <header class="hero-section">
          <span class="line line-1">Whimsical tools</span>
          <span class="line line-2" style="position: relative; left: 0.1em">for everyday life</span>
        </header>

        <Card href="https://bleep.is/" target="_blank" class="card-animate" style={{ width: "280px"}} id="card-bleep">
          <img src="/bleep_icon.png" alt="Bleep's icon" style={{ width: "48px", height: "auto", borderRadius: "10px", marginBottom: "1em"  }} />
            <CardOneliner title="Bleep">Organize your ideas visually on iOS and macOS.</CardOneliner>
        </Card>

        <Card href="https://testflight.apple.com/join/pumSW2WF" class="card-animate" style={{ width: "300px"}} id="card-flow">
        <img src="/flow_icon.png" alt="Flow's icon" style={{ width: "48px", height: "auto", borderRadius: "10px", marginBottom: "1em" }} />
          <CardOneliner title="Flow">Casual money tracker. <br/>Join the TestFlight for iPhone.</CardOneliner>
        </Card>

        <Card class="card-animate" style={{ width: "310px"}} id="card-about" expandable={true}>
          <img src="/avatar.png" alt="Rolando's avatar" style={{ width: "48px", height: "auto", borderRadius: "10px", marginBottom: "1em"  }} />
          <CardOneliner title="About me">ðŸ‘‹ Iâ€™m Rolando<br />Jack of all trades, master of some.</CardOneliner>
          <Fragment slot="expandable">
          <p>
          I design & build apps that help you slow down and have fun with your thoughts. Iâ€™m based in Philly though originally from South America.
            </p>
            <p>When I'm not coding, I'm probably watching horror movies, playing RL, or riding Nitro at Six Flags.</p>
          </Fragment>
        </Card>

        <Card class="social-card card-animate" style={{ display: "flex", flexDirection: "column", alignItems: "center", justifyContent: "center", gap: "1em", width: "auto"}} id="card-social">
          <SocialIcon variant="threads" size={28} />
          <SocialIcon variant="x" size={28} />
        </Card>
    </main>
</Layout>

<style>
  main {
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
  }
  .hero-section {
    font-size: 72px;
    font-weight: 300;
    line-height: 1.25;
    padding: 1em;
    font-family: 'Jugendreisen', system-ui, -apple-system, sans-serif;
    color: white;
    text-shadow: 
      0 0 20px rgba(255, 255, 255, 0.6), 
      0 0 40px rgba(255, 255, 255, 0.4), 
      0 0 60px rgba(255, 255, 255, 0.3),
      0 0.025em 0 hsla(274, 62%, 79%, 1.0),
      0 8px 16px hsl(210, 51%, 5%);
  }

  .line {
    display: block;
    opacity: 0;
    animation: fadeInSlideUp 1.8s cubic-bezier(0.19, 1, 0.22, 1) forwards;
  }

  .line-1 {
    animation-delay: 0s;
  }

  .line-2 {
    animation-delay: 0.3s;
  }

  @keyframes fadeInSlideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 1200px) {
    .hero-section {
      font-size: 72px;
    }
  }
  @media (max-width: 756px) {
    .hero-section {
      font-size: 48px;
    }
  }
  @media (max-width: 512px) {
    .hero-section {
      font-size: 32px;
      text-align: center;
    }
  }

  @media (orientation: portrait) {
    main {
      justify-content: flex-end;
    }
  }
</style>

<style is:global>
  /* Card slide up animation */
  .card-animate {
    opacity: 0;
    transform: translateY(20px);
    animation: cardFadeInSlideUp 1.8s cubic-bezier(0.19, 1, 0.22, 1) forwards;
  }

  #card-bleep {
    animation-delay: 0.5s;
  }

  #card-flow {
    animation-delay: 0.7s;
  }

  #card-about {
    animation-delay: 0.9s;
  }

  #card-social {
    animation-delay: 1.1s;
  }

  @keyframes cardFadeInSlideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
