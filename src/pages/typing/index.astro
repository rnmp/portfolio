---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);

// Render the content for each post
const postsWithContent = await Promise.all(
  posts.map(async (post) => {
    const { Content } = await post.render();
    return {
      ...post,
      Content
    };
  })
);

---

<Layout title="Rolando is typing…" description="Blog posts and writings by Rolando Murillo" backgroundVariant="typing">
<main>
  <div class="blog-index">

    <header class="main-title">typing…</header>
    <div class="posts">
      {postsWithContent.map((post) => {
        // Format the date using UTC methods to avoid timezone shifts
        const formattedDate = post.data.date.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
          timeZone: 'UTC'
        });
        
        return (
          <article class="blog-post">
            <header>
              <h1><a href={`/typing/${post.slug}`}>{post.data.title}</a></h1>
              <time datetime={post.data.date.toISOString()}>{formattedDate}</time>
            </header>
            <div class="content">
              <post.Content />
            </div>
          </article>
        );
      })}
    </div>
  </div>
</main>
</Layout>

<style>
  main {
    height: 100%;
    overflow: scroll;
  }

  .blog-index {
    position: relative;
    padding: 72px;
    min-height: 100vh;
  }

  .content :global(a) {
    color: hsla(49, 100%, 72%, 1.0);
        text-shadow: 
      0 0 20px rgba(255, 229, 114, 0.6), 
      0 0 40px rgba(255, 229, 114, 0.4), 
      0 0 60px rgba(255, 229, 114, 0.3),
      0 0.02em 0 #FFBF45,
      0 8px 16px hsl(239, 23%, 11%);
  }

  header {
    margin-bottom: 3rem;
    text-align: center;
    padding: 0 1.5rem;
    a {
      text-decoration: none;
    }
  }

  .main-title {
    font-family: 'Jugendreisen', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 72px;
    margin-bottom: 0.5em;
    color: hsla(49, 100%, 72%, 1.0);
    text-shadow: 
      0 0 20px rgba(255, 229, 114, 0.6), 
      0 0 40px rgba(255, 229, 114, 0.4), 
      0 0 60px rgba(255, 229, 114, 0.3),
      0 0.02em 0 #FFBF45,
      0 8px 16px hsl(239, 23%, 11%);
      font-weight: 400;
      position: relative;
      left: 0.1em;
  }

  .back-link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: white;
  }

  .posts {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .blog-post {
    position: relative;
    max-width: 600px;
    margin: 0 auto;
    padding: 3rem 2rem;
    width: 100%;
    z-index: 1;
    background-color: rgba(20, 20, 30, 0.4);
    backdrop-filter: blur(12px);
    border-radius: 32px;
    box-shadow: 0 0 1px rgba(255, 255, 255, 0.3), 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .blog-post header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .blog-post h1 {
    font-family: 'Rubik', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: clamp(2rem, 2.5vw, 3rem);
    line-height: 1.2;
    margin-bottom: 1rem;
    color: white;
    font-weight: 300;
  }

  .blog-post time {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.75rem;
    text-transform: uppercase;
    font-weight: 500;
  }

  .content {
    font-family: 'Rubik', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.9);
  }

  .content :global(h2) {
    font-family: 'Jugendreisen', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 1.8rem;
    margin: 2rem 0 1rem;
    color: white;
    text-shadow: 
      0 0 10px rgba(255, 255, 255, 0.5), 
      0 0 20px rgba(255, 255, 255, 0.3),
      0 4px 8px rgba(0, 0, 0, 0.5);
  }

  .content :global(h3) {
    font-family: 'Jugendreisen', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 1.4rem;
    margin: 1.5rem 0 0.75rem;
    color: white;
    text-shadow: 
      0 0 8px rgba(255, 255, 255, 0.4), 
      0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
  }

  .content :global(a) {
    text-decoration: none;
    border-bottom: 1px dotted transparent;
    transition: border-color 0.2s;
  }

  .content :global(a:hover) {
    border-bottom-color: #FFBF45;
  }

  .content :global(blockquote) {
    border-left: 3px solid rgba(255, 255, 255, 0.3);
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: rgba(255, 255, 255, 0.7);
  }

  .content :global(code) {
    background: rgba(255, 255, 255, 0.1);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.9em;
    color: #6db3f2;
  }

  .content :global(pre) {
    background: rgba(0, 0, 0, 0.3);
    padding: 1rem;
    border-radius: 5px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
    color: rgba(255, 255, 255, 0.9);
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
    display: block;
  }

  @media (max-width: 1200px) {
    h2 {
      font-size: 72px;
    }
  }
  
  @media (max-width: 756px) {
    h2 {
      font-size: 48px;
    }
    .blog-index {
      padding: 1.5rem;
    }
    .blog-post {
      padding: 2rem 1.5rem;
      border-radius: 24px;
    }
  }
  
  @media (max-width: 512px) {
    h2 {
      font-size: 32px;
      text-align: center;
      padding: 0.5em;
    }
    .blog-index {
      padding: 1rem;
    }
    .blog-post {
      padding: 2rem 1rem;
      border-radius: 20px;
    }
  }
</style>

